---
// Header component props
export interface Props {
  transparent?: boolean;
}

const { transparent = false } = Astro.props;
---

<header
  class={`fixed top-0 left-0 z-50 w-full transition-all duration-300 ${
    transparent ? "bg-transparent" : "bg-white/95 backdrop-blur-md shadow-lg"
  }`}
  x-data="{ 
    isOpen: false, 
    scrolled: false,
    init() {
      window.addEventListener('scroll', () => {
        this.scrolled = window.scrollY > 20;
      });
    }
  }"
  :class="scrolled && 'bg-white/98 shadow-xl'"
>
  <div class="container mx-auto px-4 lg:px-6">
    <div class="flex h-16 items-center justify-between md:h-20">
      <!-- Logo -->
      <div class="flex items-center space-x-3">
        <div
          class="flex items-center justify-center rounded-xl bg-white md:h-12 md:w-12"
        >
          <img
            src="/image.png"
            alt="Kıymet Veteriner"
            class="size-20 rounded-full object-cover"
          />
        </div>
        <div class="-mt-1 flex flex-col">
          <h1
            class="font-secondary text-lg font-bold tracking-tight text-gray-800 md:text-xl"
          >
            Kıymet Veteriner
          </h1>
        </div>
      </div>

      <!-- Desktop Navigation -->
      <nav class="hidden items-center space-x-8 lg:flex">
        <a
          href="/"
          class="font-medium text-gray-700 transition-colors duration-200 hover:text-sky-500"
        >
          Ana Sayfa
        </a>
        <div class="relative" x-data="{ open: false }">
          <button
            @click="open = !open"
            class="flex cursor-pointer items-center font-medium text-gray-700 transition-colors duration-200 hover:text-sky-500"
          >
            Hizmetlerimiz
            <svg
              class="ml-1 h-4 w-4 transition-transform duration-200"
              :class="open && 'rotate-180'"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div
            x-show="open"
            x-transition:enter="transition ease-out duration-200"
            x-transition:enter-start="opacity-0 scale-95"
            x-transition:enter-end="opacity-100 scale-100"
            x-transition:leave="transition ease-in duration-150"
            x-transition:leave-start="opacity-100 scale-100"
            x-transition:leave-end="opacity-0 scale-95"
            @click.away="open = false"
            class="absolute top-full left-0 z-10 mt-2 w-56 rounded-xl border border-gray-100 bg-white py-2 shadow-lg"
          >
            <a
              href="/hizmetler/genel-muayene"
              class="block px-4 py-2 text-sm text-gray-700 transition-colors hover:bg-sky-50 hover:text-sky-500"
            >
              Genel Muayene
            </a>
            <a
              href="/hizmetler/asi-saglik"
              class="block px-4 py-2 text-sm text-gray-700 transition-colors hover:bg-sky-50 hover:text-sky-500"
            >
              Aşı & Sağlık Takibi
            </a>
            <a
              href="/hizmetler/cerrahi"
              class="block px-4 py-2 text-sm text-gray-700 transition-colors hover:bg-sky-50 hover:text-sky-500"
            >
              Cerrahi İşlemler
            </a>
            <a
              href="/hizmetler/laboratuvar"
              class="block px-4 py-2 text-sm text-gray-700 transition-colors hover:bg-sky-50 hover:text-sky-500"
            >
              Laboratuvar
            </a>
            <a
              href="/hizmetler/acil"
              class="block px-4 py-2 text-sm text-gray-700 transition-colors hover:bg-sky-50 hover:text-sky-500"
            >
              Acil Müdahale
            </a>
            <a
              href="/hizmetler/dis-bakimi"
              class="block px-4 py-2 text-sm text-gray-700 transition-colors hover:bg-sky-50 hover:text-sky-500"
            >
              Diş Bakımı
            </a>
          </div>
        </div>
        <a
          href="/hakkimizda"
          class="font-medium text-gray-700 transition-colors duration-200 hover:text-sky-500"
        >
          Hakkımızda
        </a>
        <a
          href="/iletisim"
          class="font-medium text-gray-700 transition-colors duration-200 hover:text-sky-500"
        >
          İletişim
        </a>
      </nav>

      <!-- CTA & Mobile Menu Button -->
      <div class="flex items-center space-x-4">
        <!-- Emergency Call Button -->
        <a
          href="tel:+905386944455"
          class="group hidden items-center space-x-2 rounded-lg bg-emerald-500 px-4 py-2 text-white transition-colors duration-200 hover:bg-emerald-700 md:flex"
        >
          <svg
            class="h-4 w-4 group-hover:animate-pulse"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
            ></path>
          </svg>
          <span class="text-sm font-semibold">Acil Arama</span>
        </a>

        <!-- Appointment Button -->
        <a
          href="/randevu"
          class="group hidden items-center rounded-lg bg-sky-500 px-4 py-2 text-white transition-colors duration-200 hover:bg-sky-700 sm:flex"
        >
          <svg
            class="mr-2 h-4 w-4 transition-transform group-hover:scale-110"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
            ></path>
          </svg>
          <span class="text-sm font-semibold">Randevu Al</span>
        </a>

        <!-- Mobile Menu Button -->
        <button
          @click="isOpen = !isOpen"
          class="flex h-10 w-10 items-center justify-center rounded-lg bg-gray-100 transition-colors duration-200 hover:bg-gray-200 lg:hidden"
        >
          <svg
            x-show="!isOpen"
            class="h-5 w-5 text-gray-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
          <svg
            x-show="isOpen"
            class="h-5 w-5 text-gray-600"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div
      x-show="isOpen"
      x-transition:enter="transition ease-out duration-300"
      x-transition:enter-start="opacity-0 -translate-y-4"
      x-transition:enter-end="opacity-100 translate-y-0"
      x-transition:leave="transition ease-in duration-200"
      x-transition:leave-start="opacity-100 translate-y-0"
      x-transition:leave-end="opacity-0 -translate-y-4"
      class="border-t border-gray-200 py-4 lg:hidden"
    >
      <nav class="flex flex-col space-y-4">
        <a
          href="/"
          class="py-2 font-medium text-gray-700 transition-colors duration-200 hover:text-sky-500"
        >
          Ana Sayfa
        </a>

        <div x-data="{ servicesOpen: false }">
          <button
            @click="servicesOpen = !servicesOpen"
            class="flex w-full items-center justify-between py-2 font-medium text-gray-700 transition-colors duration-200 hover:text-sky-500"
          >
            Hizmetlerimiz
            <svg
              class="h-4 w-4 transition-transform duration-200"
              :class="servicesOpen && 'rotate-180'"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div x-show="servicesOpen" x-transition class="mt-2 ml-4 space-y-2">
            <a
              href="/hizmetler/genel-muayene"
              class="block py-1 text-sm text-gray-600 transition-colors hover:text-sky-500"
            >
              Genel Muayene
            </a>
            <a
              href="/hizmetler/asi-saglik"
              class="block py-1 text-sm text-gray-600 transition-colors hover:text-sky-500"
            >
              Aşı & Sağlık Takibi
            </a>
            <a
              href="/hizmetler/cerrahi"
              class="block py-1 text-sm text-gray-600 transition-colors hover:text-sky-500"
            >
              Cerrahi İşlemler
            </a>
            <a
              href="/hizmetler/laboratuvar"
              class="block py-1 text-sm text-gray-600 transition-colors hover:text-sky-500"
            >
              Laboratuvar
            </a>
            <a
              href="/hizmetler/acil"
              class="block py-1 text-sm text-gray-600 transition-colors hover:text-sky-500"
            >
              Acil Müdahale
            </a>
            <a
              href="/hizmetler/dis-bakimi"
              class="block py-1 text-sm text-gray-600 transition-colors hover:text-sky-500"
            >
              Diş Bakımı
            </a>
          </div>
        </div>

        <a
          href="/hakkimizda"
          class="py-2 font-medium text-gray-700 transition-colors duration-200 hover:text-sky-500"
        >
          Hakkımızda
        </a>
        <a
          href="/iletisim"
          class="py-2 font-medium text-gray-700 transition-colors duration-200 hover:text-sky-500"
        >
          İletişim
        </a>

        <!-- Mobile CTA Buttons -->
        <div class="space-y-3 border-t border-gray-200 pt-4">
          <a
            href="/randevu"
            class="flex items-center justify-center rounded-lg bg-sky-500 px-4 py-3 text-white transition-colors duration-200 hover:bg-sky-700"
          >
            <svg
              class="mr-2 h-4 w-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
              ></path>
            </svg>
            <span class="font-semibold">Randevu Al</span>
          </a>
          <a
            href="tel:+905386944455"
            class="flex items-center justify-center rounded-lg bg-red-600 px-4 py-3 text-white transition-colors duration-200 hover:bg-red-700"
          >
            <svg
              class="mr-2 h-4 w-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              ></path>
            </svg>
            <span class="font-semibold">Acil Arama</span>
          </a>
        </div>
      </nav>
    </div>
  </div>
</header>
