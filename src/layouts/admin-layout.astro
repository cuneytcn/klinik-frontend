---
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  ogTitle?: string;
  ogDescription?: string;
  ogImage?: string;
  canonicalUrl?: string;
}

const {
  title = "Admin Panel - Kıymet Veteriner Kliniği",
  description = "Kıymet Veteriner Kliniği admin paneli",
  keywords = "admin, veteriner, yönetim, panel",
  ogTitle = title,
  ogDescription = description,
  ogImage = "/og-image.jpg",
  canonicalUrl = Astro.url.href,
} = Astro.props as Props;
---

<html lang="tr">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="Kıymet Veteriner Kliniği" />
    <meta name="robots" content="noindex, nofollow" />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={ogTitle} />
    <meta property="og:description" content={ogDescription} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content="Kıymet Veteriner Kliniği" />
    <meta property="og:locale" content="tr_TR" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={ogTitle} />
    <meta name="twitter:description" content={ogDescription} />
    <meta name="twitter:image" content={ogImage} />
  </head>
  <body>
    <main class="w-full flex-1"><slot /></main>
  </body>
</html>
