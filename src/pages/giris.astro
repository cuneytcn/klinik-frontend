---
import AdminLayout from "../layouts/admin-layout.astro";
---

<AdminLayout
  title="Admin Girişi - Kıymet Veteriner Kliniği"
  description="Kıymet Veteriner Kliniği admin paneli girişi"
  keywords="admin, giriş, veteriner, yönetim"
>
  <div
    class="flex min-h-screen items-center justify-center bg-gradient-to-br from-sky-50 via-white to-blue-50 px-4 py-12 sm:px-6 lg:px-8"
  >
    <div class="w-full max-w-md space-y-8">
      <!-- Logo ve Başlık -->
      <div class="text-center">
        <div class="mb-6 flex justify-center">
          <div
            class="flex h-20 w-20 items-center justify-center rounded-full bg-white shadow-lg"
          >
            <img
              src="/image.png"
              alt="Kıymet Veteriner"
              class="h-16 w-16 rounded-full object-cover"
            />
          </div>
        </div>
        <h2 class="mt-6 text-center text-3xl font-bold text-gray-900">
          Admin Girişi
        </h2>
        <p class="mt-2 text-center text-sm text-gray-600">
          Kıymet Veteriner Kliniği Yönetim Paneli
        </p>
      </div>

      <!-- Giriş Formu -->
      <div
        class="mt-8 rounded-lg border border-gray-100 bg-white px-6 py-8 shadow-xl"
      >
        <form
          id="loginForm"
          class="space-y-6"
          x-data="{
            email: '',
            password: '',
            loading: false,
            error: '',
            async handleSubmit(e) {
              e.preventDefault();
              this.loading = true;
              this.error = '';
              
              try {
                const { supabase } = await import('../lib/supabase.ts');
                const { data, error } = await supabase.auth.signInWithPassword({
                  email: this.email,
                  password: this.password,
                });
                
                if (error) {
                  this.error = 'Giriş bilgileri hatalı. Lütfen tekrar deneyin.';
                  return;
                }
                
                // Başarılı giriş - admin paneline yönlendir
                window.location.href = '/admin';
              } catch (err) {
                this.error = 'Bir hata oluştu. Lütfen tekrar deneyin.';
              } finally {
                this.loading = false;
              }
            }
          }"
          @submit="handleSubmit"
        >
          <!-- E-posta Alanı -->
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700">
              E-posta Adresi
            </label>
            <div class="relative mt-1">
              <input
                id="email"
                name="email"
                type="email"
                autocomplete="email"
                required
                x-model="email"
                class="relative block w-full appearance-none rounded-lg border border-gray-300 px-3 py-3 text-gray-900 placeholder-gray-500 transition-colors focus:z-10 focus:border-sky-500 focus:ring-2 focus:ring-sky-500 focus:outline-none sm:text-sm"
                placeholder="admin@kiymetveteriner.com"
              />
              <div class="absolute inset-y-0 right-0 flex items-center pr-3">
                <svg
                  class="h-5 w-5 text-gray-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"
                  ></path>
                </svg>
              </div>
            </div>
          </div>

          <!-- Şifre Alanı -->
          <div>
            <label
              for="password"
              class="block text-sm font-medium text-gray-700"
            >
              Şifre
            </label>
            <div class="relative mt-1">
              <input
                id="password"
                name="password"
                type="password"
                autocomplete="current-password"
                required
                x-model="password"
                class="relative block w-full appearance-none rounded-lg border border-gray-300 px-3 py-3 text-gray-900 placeholder-gray-500 transition-colors focus:z-10 focus:border-sky-500 focus:ring-2 focus:ring-sky-500 focus:outline-none sm:text-sm"
                placeholder="••••••••"
              />
              <div class="absolute inset-y-0 right-0 flex items-center pr-3">
                <svg
                  class="h-5 w-5 text-gray-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                  ></path>
                </svg>
              </div>
            </div>
          </div>

          <!-- Hata Mesajı -->
          <div
            x-show="error"
            x-text="error"
            class="rounded-lg border border-red-200 bg-red-50 p-3 text-center text-sm text-red-600"
          >
          </div>

          <!-- Giriş Butonu -->
          <div>
            <button
              type="submit"
              :disabled="loading || !email || !password"
              :class="loading ? 'bg-gray-400 cursor-not-allowed' : 'bg-sky-600 hover:bg-sky-700'"
              class="group relative flex w-full justify-center rounded-lg border border-transparent px-4 py-3 text-sm font-medium text-white transition-all duration-200 focus:ring-2 focus:ring-sky-500 focus:ring-offset-2 focus:outline-none disabled:opacity-50"
            >
              <span x-show="!loading" class="flex items-center">
                <svg
                  class="mr-2 h-5 w-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"
                  ></path>
                </svg>
                Giriş Yap
              </span>
              <span x-show="loading" class="flex items-center">
                <svg
                  class="mr-3 -ml-1 h-5 w-5 animate-spin text-white"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                >
                  <circle
                    class="opacity-25"
                    cx="12"
                    cy="12"
                    r="10"
                    stroke="currentColor"
                    stroke-width="4"></circle>
                  <path
                    class="opacity-75"
                    fill="currentColor"
                    d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
                  ></path>
                </svg>
                Giriş yapılıyor...
              </span>
            </button>
          </div>
        </form>

        <!-- Alt Bilgi -->
        <div class="mt-6 text-center">
          <p class="text-xs text-gray-500">
            Güvenli giriş için SSL şifreleme kullanılmaktadır
          </p>
        </div>
      </div>

      <!-- Ana Sayfaya Dön -->
      <div class="text-center">
        <a
          href="/"
          class="inline-flex items-center text-sm text-sky-600 transition-colors hover:text-sky-800"
        >
          <svg
            class="mr-1 h-4 w-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Ana Sayfaya Dön
        </a>
      </div>
    </div>
  </div>

  <!-- JavaScript for auto-redirect if already logged in -->
  <script>
    import { supabase } from "../lib/supabase.ts";

    // Sayfa yüklendiğinde oturum kontrolü yap
    supabase.auth.getSession().then(({ data: { session } }) => {
      if (session) {
        // Zaten giriş yapılmışsa admin paneline yönlendir
        window.location.href = "/admin";
      }
    });

    // Oturum değişikliklerini dinle
    supabase.auth.onAuthStateChange((event, session) => {
      if (event === "SIGNED_IN" && session) {
        window.location.href = "/admin";
      }
    });
  </script>
</AdminLayout>
