      const end = 21; // 21:00 (son randevu 20:30)

      for (let hour = start; hour < end; hour++) {
        // Tam saat
        slots.push(`${hour.toString().padStart(2, "0")}:00`);
        // YarÄ±m saat
        slots.push(`${hour.toString().padStart(2, "0")}:30`);
      }

      return slots;
    }

